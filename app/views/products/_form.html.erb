<div style="max-width: 400px; margin: 50px auto; padding: 20px; background: #FFF; border: 1px solid #EEEEEE; border-radius: 8px;">
     <h2 style="color: #2D3277;"><%= @product.new_record? ? "Novo Produto" : "Editar Produto" %></h2>
     <%= form_with model: [@category, @product], local: true do |form| %>
       <div style="margin-bottom: 10px;">
         <%= form.label :title, style: "color: #2D3277;" %><br>
         <%= form.text_field :title, style: "width: 100%; padding: 8px; border: 1px solid #EEEEEE; border-radius: 4px;" %>
       </div>
       <div style="margin-bottom: 10px;">
         <%= form.label :description, style: "color: #2D3277;" %><br>
         <%= form.text_area :description, style: "width: 100%; padding: 8px; border: 1px solid #EEEEEE; border-radius: 4px;" %>
       </div>
       <div style="margin-bottom: 10px;">
         <%= form.label :price, style: "color: #2D3277;" %><br>
         <%= form.number_field :price, step: 0.01, style: "width: 100%; padding: 8px; border: 1px solid #EEEEEE; border-radius: 4px;" %>
       </div>
       <div style="margin-bottom: 10px;">
         <%= form.label :stock_quantity, style: "color: #2D3277;" %><br>
         <%= form.number_field :stock_quantity, style: "width: 100%; padding: 8px; border: 1px solid #EEEEEE; border-radius: 4px;" %>
       </div>
       <div style="margin-bottom: 10px;">
         <%= form.label :image_url, style: "color: #2D3277;" %><br>
         <%= form.text_field :image_url, style: "width: 100%; padding: 8px; border: 1px solid #EEEEEE; border-radius: 4px;" %>
       </div>
       <div>
         <%= form.submit "Criar Produto", style: "background: #FFE600; color: #2D3277; padding: 10px; border: none; border-radius: 4px; width: 100%;" %>
       </div>
     <% end %>
     <%= link_to "Voltar", @category ? category_products_path(@category) : products_path, style: "color: #3483FA;" %>
   </div>